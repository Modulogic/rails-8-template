<h1>New Video</h1>

<%= form_with model: @video, local: true, multipart: true do |f| %>
  <!-- TITLE -->
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <!-- DESCRIPTION -->
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <!-- TRANSCRIPT -->
  <div>
    <%= f.label :transcript %><br>
    <%= f.text_area :transcript %>
  </div>

  <!-- FILE UPLOAD -->
  <div class="upload-field">
    <label for="video_file_input" class="upload-icon">
      <!-- Heroicons cloud-upload outline, 32Ã—32px -->
      <svg xmlns="http://www.w3.org/2000/svg"
           class="icon-upload"
           viewBox="0 0 24 24"
           fill="none"
           stroke="currentColor"
           stroke-width="2"
           stroke-linecap="round"
           stroke-linejoin="round">
        <path d="M12 16v-8m0 0l-3 3m3-3l3 3"/>
        <path d="M20.39 18.39A5.86 5.86 0 0018 9h-1.26
                 A8 8 0 103 16.29"/>
      </svg>
      <span>Pick a video</span>
    </label>

    <!-- hidden file input -->
    <%= f.file_field :video_file,
                     id: "video_file_input",
                     accept: "video/*",
                     style: "display: none;" %>
  </div>

  <!-- SUBMIT -->
  <div>
    <%= f.submit "Create Video" %>
  </div>
<% end %>
