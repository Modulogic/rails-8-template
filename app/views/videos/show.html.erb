  <%= render partial: "player", locals: { video: @video } %>

  <%= link_to "← Back to All Videos", root_path, style: "margin-left: 1rem; height: fit-content; padding: 0.3rem 0.75rem; border-radius: 6px; background-color: #f0f0f0; font-size: 0.9rem; text-decoration: none;" %>
